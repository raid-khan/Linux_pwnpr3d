HardwareComputer computer = new HardwareComputer()
OperatingSystem os = computer.newOperatingSystem()
	computer.connect(os)
	Agent computer = newAgent()
	Agent SSHClient = newAgent)
		os.connect(SSHClient)
	Application application = newApplication()
		os.connect (Application)
	identity UserAccounts = new identity()
		os.connect (UserAccounts)
		Application.connect(UserAccounts)
	Data Database = newData()
		Data Folders = NewData()
		Data Backup = newData
		Data Contacts = newData
		Data Archive = newArchive
			Folders.connect (Database)
			Backup.connect (Database)
			Contacts.connect (Database)
			Archive.connect (Database)
		UserAccounts.connect(Database)
		Application.connect(Database)
	Agent Firewall = newAgent()
		UserAccounts.connect (Firewall)
	Agent Router = newAgent()
		Firewall.connects(Router)
	Agent Ethernet = newAgent()
		Firewall.connect (Ethernet)
	NetworkInterfaceImplementation NetworkProtocols = newNetworkInterfaceImplementation
		NetworkProtocolImplementation TcpIpProtocol = newNetworkProtocolImplementation
		NetworkInterfaceImplementation TelnetProtocol = newNetworkInterfaceImplementation
		NetworkInterfaceImplementation ARPImplementation = newNetworkInterfaceImplementation		
			TelnetProtocol.connect(NetworkProtocols)
			TcpIpProtocol.connect(NetworkProtocols)
			ARPImplementation.connect(NetworkProtocols)
					Data ARPTable = newData()
					ARPImplementation.connect(ARPTable)
					Firewall.connect (ARPTable)
	NetworkProtocols.connect(Firewall)
	NetworkProtocols.connect (SSHClient)
	
